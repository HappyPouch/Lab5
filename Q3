/**
 * Lab 5 Strings Q3
 * CryptoQuote.
 * 
 * Hildebrandt
 */
public class Q3CryptoQuote
{
    private int shift;

    public Q3CryptoQuote(int s)
    {
        shift = s;
    }

    public int getShift()
    {
        return shift;
    }

    public String decrypt(String cipher)
    {
        String result = "";
        
        for(int charIndex = 0; charIndex < cipher.length(); charIndex++){
            char ch = cipher.charAt(charIndex);
            // do opposite of encrypt
            // look at lowercase
            if(ch >= 'a' && ch <= 'z') {
                char shiftLetter = (char)(ch - shift);
                
                if (shiftLetter < 'a') {
                    shiftLetter += 26;
                }
                
                result += shiftLetter;
            }
            // look at uppercase -- comment out if not needed
            else if(ch >= 'A' && ch <= 'Z'){
                char shiftLetter = (char)(ch - shift);
                
                if(shiftLetter < 'A'){
                    shiftLetter += 26;
                }
                
                result += shiftLetter;
            }
            // not a letter
            else{
                result += ch;
            }
        }
        
        return result;
    }

    public String encrypt(String phrase)
    {
        String result = "";
        
        for(int charIndex = 0; charIndex < phrase.length(); charIndex++){
            char ch = phrase.charAt(charIndex);
            
            // look at lowercase
            if(ch >= 'a' && ch <= 'z'){
                char shiftLetter = (char)(ch + shift);
                
                if(shiftLetter > 'z'){
                    shiftLetter -= 26;
                }
                
                result += shiftLetter;
            }
            // look at uppercase -- comment out if not needed
            else if(ch >= 'A' && ch <= 'Z'){
                char shiftLetter = (char)(ch + shift);
                
                if(shiftLetter > 'Z'){
                    shiftLetter -= 26;
                }
                
                result += shiftLetter;
            }
            // not a letter
            else{
                result += ch;
            }
        }
        
        return result;
    }
}
