public class Q2UsesStrings
{
    //isPalindrome: String --> boolean
    // hint: change everything to lower case
    public static boolean isPalindrome(String s)
    {
        s = s.toLowerCase();
        
        String palindromeCheck = "";
        
        for(int x = s.length()-1; x >= 0; x--){
            palindromeCheck += s.charAt(x);
        }
        
        //System.out.println("" + palindromeCheck + "check");   // print the comparison
        
        if(s.equals(palindromeCheck)){
            return true;
        }
        
        return false;
    }

    // return true if all 5 vowels are present and in order
    // example: facetious --> should be true
    public static boolean allVowelsInOrder(String s)
    {
        int index = 0;
        String vowels = "aeiou";
        
        for(int n = 0; n < s.length(); n++){
            if(s.charAt(n) == vowels.charAt(index)){
                index++;
                if(index == 5){
                    return true;
                }
            }
        }
        
        return false;
    }

